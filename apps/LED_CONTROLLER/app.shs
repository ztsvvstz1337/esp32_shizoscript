get_color(str)
{
	r = 0;
	g = 0;
	b = 0;
	if(str[0] == "#")
	{
		r = hex_to_char(str:substr(1,2)) / 255.0;
		g = hex_to_char(str:substr(3,2)) / 255.0;
		b = hex_to_char(str:substr(5,2)) / 255.0;
	}
	return [r=r,g=g,b=b];
}

has_solo_segments = 0;
get_leds_out_count()
{
	max_outs = 0;
	has_solo_segments = 0;
	for(#it :: led_segments)
	{
		seg_count = 0;
		for(#seg :: it.segments)
		{
			seg_count += seg.width * max(1,seg.count);
			if(seg.testout)
				has_solo_segments = 1;
		}
		if(seg_count > max_outs)
			max_outs = seg_count;
	}
	
	return int(max_outs);
}

global init_fx = undefined;

init_driver()
{
	pins = 0;
	max_output = get_leds_out_count();
	
	for(it :: led_segments)
	{
		pins:push(it.pin);	
	}
	
	print("init driver with pins:");
	print(pins);
	print("And max led out: " + max_output);
	print("LED Channels: " + 3);
	
	if(max_output == 0)
		return;
	if(pins:count() == 0)
		return;
	
	if(driver == 0)
	{
		driver = led_driver(pins, max_output, 3);
		driver.enable_artnet();
		driver.show();
		init_fx();
	}
	else
	{
		driver.blackout();
		driver.show_now();
		driver.init_leds(pins, max_output, 3);
	}
}

